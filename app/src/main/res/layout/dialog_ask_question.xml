<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/ask_question"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/ask_question_subtitle"
            android:textColor="#9CA3AF"
            android:textSize="14sp" />

        <!-- Voice Input Section -->

        <!-- Text Input -->

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="149dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:background="@drawable/ic_app_logo"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageButton
                android:id="@+id/micButton"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/ic_app_logo"
                android:backgroundTint="#00D66C"
                android:contentDescription="@string/record_voice"
                android:src="@drawable/ic_microphone_big" />

            <TextView
                android:id="@+id/tapToSpeakText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tap_to_speak"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/questionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@android:color/transparent"
            android:hint="@string/type_your_question"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#6B7280" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:backgroundTint="#0F0F0F"
                android:text="@string/cancel"
                android:textColor="#9CA3AF"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00D66C"
                android:text="@string/send"
                android:textColor="#1A1A1A"
                app:cornerRadius="8dp" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
